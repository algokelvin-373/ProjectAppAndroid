<LinearLayout android:layout_marginBottom="20dp"
    android:id="@+id/llButton"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/floating_answer_call_container"
            android:layout_width="@dimen/end_call_floating_action_button_diameter_hangup"
            android:layout_height="@dimen/end_call_floating_action_button_diameter_hangup"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/end_call_button_margin_bottom"
            android:background="@drawable/fab_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageButton
                android:id="@+id/floating_answer_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/end_call_background"
                android:contentDescription="@string/onscreenEndCallText"
                android:scaleType="center"
                android:src="@drawable/ic_hangup_call" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/fab_red"
            app:layout_constraintBottom_toBottomOf="@+id/floating_answer_call_container"
            app:layout_constraintEnd_toStartOf="@+id/floating_answer_call_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/floating_answer_call_container">

            <ImageButton
                android:id="@+id/floating_end_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/end_call_background"
                android:contentDescription="@string/onscreenEndCallText"
                android:scaleType="center"
                android:src="@drawable/ic_end_call" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/floating_answer_call_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/floating_answer_call_container"
            app:layout_constraintTop_toTopOf="@+id/floating_answer_call_container">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/end_call_background"
                android:contentDescription="@string/onscreenEndCallText"
                android:scaleType="fitXY"
                android:src="@drawable/ic_floating_love_icon" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>