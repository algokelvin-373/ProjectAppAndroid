<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FFDDDDDD" /> <!-- Warna saat tombol ditekan -->
            <stroke
                android:width="2dp"
                android:color="#FF888888" /> <!-- Border saat ditekan -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#34e1eb" /> <!-- Warna default -->
            <stroke
                android:width="2dp"
                android:color="#FFCCCCCC" /> <!-- Border default -->
        </shape>
    </item>
</selector>
