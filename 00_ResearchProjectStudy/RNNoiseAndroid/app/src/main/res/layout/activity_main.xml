<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text=""
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Modul Pengurangan kebisingan rekaman"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/audio_Record"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Mulai merekam" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/audio_play"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Putar audio" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/audio_tran"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Pengurangan bising" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/audio_play2"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Putar audio telah diproses" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Modul pengurangan kebisingan waktu nyata"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/rt_audio_play"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Umpan balik waktu nyata" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/rt_audio_tran_flag"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:text="Aktifkan pengurangan kebisingan secara real-time" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
