<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@layout/home_dest">

    <fragment
        android:id="@+id/pageOneFragment"
        android:name="com.algokelvin.navigation.PageOneFragment"
        android:label="fragment_page_one"
        tools:layout="@layout/fragment_page_one" >
        <action
            android:id="@+id/action_pageOneFragment_to_pageTwoFragment2"
            app:destination="@id/pageTwoFragment2" />
    </fragment>

    <fragment
        android:id="@+id/pageTwoFragment2"
        android:name="com.algokelvin.navigation.PageTwoFragment"
        android:label="fragment_page_two"
        tools:layout="@layout/fragment_page_two" >
        <action
            android:id="@+id/action_pageTwoFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.algokelvin.navigation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

</navigation>