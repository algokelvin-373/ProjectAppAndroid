<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_user"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_profile_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_sample_photo_user"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/name_profile_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="First Name Last Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_profile_user"
            app:layout_constraintTop_toTopOf="@+id/img_profile_user" />

        <TextView
            android:id="@+id/email_profile_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="First Name@gmail.com"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name_profile_user"
            app:layout_constraintStart_toStartOf="@+id/name_profile_user"
            app:layout_constraintTop_toBottomOf="@+id/name_profile_user" />

        <TextView
            android:id="@+id/phone_profile_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="08146374378"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name_profile_user"
            app:layout_constraintStart_toStartOf="@+id/name_profile_user"
            app:layout_constraintTop_toBottomOf="@+id/email_profile_user" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
