<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_result_error"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_info_ylw"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResult_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/icon_result_error"
        app:layout_constraintStart_toStartOf="@+id/icon_result_error"
        app:layout_constraintTop_toBottomOf="@+id/icon_result_error" />

    <TextView
        android:id="@+id/btn_back_menu_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style_yellow"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/txtResult_error"
        app:layout_constraintStart_toStartOf="@+id/txtResult_error"
        app:layout_constraintTop_toBottomOf="@+id/txtResult_error" />

</androidx.constraintlayout.widget.ConstraintLayout>