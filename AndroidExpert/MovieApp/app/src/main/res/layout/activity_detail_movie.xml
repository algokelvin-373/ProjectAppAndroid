<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.DetailMovieActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">

            <ImageView
                    android:id="@+id/image_poster_catalog_movie"
                    android:background="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/btn_back_to_menu"
                    android:src="@drawable/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:background="#E7E5E5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">

            <ImageView
                    android:id="@+id/image_movie_catalog"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/title"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/title_catalog_movie"
                        android:text="@string/title"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/delius"/>

                <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/date_release"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/date_release_catalog_movie"
                        android:text="@string/date_release"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/delius"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/status"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/runtime"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/status_release_catalog_movie"
                            android:text="@string/status"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/delius"/>

                    <TextView
                            android:id="@+id/runtime_release_catalog_movie"
                            android:text="@string/runtime"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/delius"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/vote_average"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/vote_count"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/vote_average_release_catalog_movie"
                            android:text="@string/vote_average"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/delius"/>

                    <TextView
                            android:id="@+id/vote_count_release_catalog_movie"
                            android:text="@string/vote_count"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/delius"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:background="#E7E5E5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/overview"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/overview_catalog_movie"
                    android:text="@string/overview"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/delius"/>

            <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/keywords"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/keyword_catalog_movie"
                    android:text="@string/keywords"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/delius"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/cast"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_cast_movie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                        android:text="@string/similar_movie"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_similar_movie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                        android:text="@string/recommendation_movie"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recommendation_movie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>