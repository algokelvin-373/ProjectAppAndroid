<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivCallIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Call Icon"/>

    <TextView
        android:id="@+id/tvFloatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Via Call WA Berjalan\nRecord Memproses"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="8dp"/>

    <ImageView
        android:id="@+id/ivCloseFloating"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_marginStart="8dp"
        android:contentDescription="Close Icon"/>
</LinearLayout>
